<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to 'Home', '/' %>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <%= link_to_if !current_admin?, "Cart: #{cart.total_items}", "/cart" %>

      <% if current_user %>
        <p>Logged in as <%= current_user.name %></p>
        <%= link_to 'Profile', '/profile' %>
        <%= link_to 'Log out', '/logout' %>
        
        <% if current_merchant? %>
          <%= link_to 'Dashboard', '/merchant/dashboard' %>
        <% elsif current_admin? %>
          <%= link_to 'Dashboard', '/admin/dashboard' %>
          <%= link_to 'All Users', '/admin/users' %>
        <% end %>
      <% else %>
        <%= link_to 'Login', '/login' %>
        <%= link_to 'Register', '/register' %>
      <% end  %>
    </nav>

    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
